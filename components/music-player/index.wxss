.bottom-music-player{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: rgb(211, 211, 211);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
@keyframes move{
  0% {transform: rotate(0deg);}
  100% {transform: rotate(359deg);}
}
.bottom-music-player .music-player-songpic{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.bottom-music-player .music-player-song-title{
  flex: 1;
}
.bottom-music-player .music-control-btn{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.bottom-music-player .music-player-list{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}